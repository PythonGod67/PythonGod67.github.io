{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "userChatRooms": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "$chatRoomId": {
          ".validate": "newData.hasChildren(['participants', 'lastMessage', 'lastMessageTimestamp'])",
          "participants": {
            ".validate": "newData.isString() && newData.val().contains(auth.uid)"
          },
          "lastMessage": {
            ".validate": "newData.isString()"
          },
          "lastMessageTimestamp": {
            ".validate": "newData.isNumber()"
          }
        }
      }
    },
    "messages": {
      "$chatRoomId": {
        ".read": "auth != null && root.child('userChatRooms').child(auth.uid).child($chatRoomId).exists()",
        ".write": "auth != null && root.child('userChatRooms').child(auth.uid).child($chatRoomId).exists()",
        "$messageId": {
          ".validate": "newData.hasChildren(['senderId', 'text', 'timestamp'])",
          "senderId": {
            ".validate": "newData.val() == auth.uid"
          },
          "text": {
            ".validate": "newData.isString()"
          },
          "timestamp": {
            ".validate": "newData.isNumber()"
          },
          "mediaUrl": {
            ".validate": "!newData.exists() || newData.isString()"
          },
          "mediaType": {
            ".validate": "!newData.exists() || (newData.isString() && (newData.val() == 'image' || newData.val() == 'video' || newData.val() == 'audio'))"
          },
          "reactions": {
            "$userId": {
              ".validate": "newData.isString()"
            }
          },
          "readBy": {
            "$userId": {
              ".validate": "newData.isBoolean()"
            }
          }
        }
      }
    },
    "typing": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "isTyping": {
          ".validate": "newData.isBoolean()"
        },
        "timestamp": {
          ".validate": "newData.isNumber()"
        }
      }
    }
  }
}